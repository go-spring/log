<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="LayoutBufferSize">100KB</Property>
        <!-- Dummy is unused -->
        <Dummy/>
    </Properties>
    <Appenders>
        <File name="file" fileName="log.txt">
            <JSONLayout bufferSize="${LayoutBufferSize}"/>
        </File>
        <Console name="console">
            <TextLayout/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="console"/>
        </Root>
        <Logger name="logger" level="trace" tags="_com_request_*">
            <AppenderRef ref="file"/>
        </Logger>
    </Loggers>
</Configuration>