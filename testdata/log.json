{
  "bufferCap": "1KB",
  "bufferSize": 1000,
  "appender": {
    "file": {
      "type": "File",
      "fileName": "log.txt",
      "layout!": "JSONLayout{}"
    },
    "console!": "Console{layout=TextLayout{}}",
    "sample!": "Sample{layout.type=TextLayout}"
  },
  "logger": {
    "root": {
      "type": "Logger",
      "level": "warn",
      "appenderRef": {
        "ref": "console"
      }
    },
    "myLogger": {
      "type": "AsyncLogger",
      "level": "trace",
      "tags": "_com_request_in,_com_request_*",
      "bufferSize": "${bufferSize}",
      "appenderRef": [
        {
          "ref": "file"
        },
        {
          "ref": "sample"
        }
      ]
    }
  }
}